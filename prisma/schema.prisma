// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email     String   @unique
  password  String
  firstName String
  lastName  String
  project   Project[]
  Task      Task[]
}

model Project {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name        String
  ownerId     String
  owner       User      @relation(fields: [ownerId], references: [id])
  description String?
  due         DateTime?
  deleted     Boolean   @default(false)
  Task        Task[]

  @@unique([ownerId, name])
  @@index([ownerId, id])
}

enum TaskStatus {
  NOT_STARTED
  STARTED
  COMPLETED
}

model Task {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  status TaskStatus @default(NOT_STARTED)
  name   String

  ownerId  String
  owner    User    @relation(fields: [ownerId], references: [id])
  projecId String
  project  Project @relation(fields: [projecId], references: [id])

  due      DateTime?
  deleted  Boolean @default(false)
}
